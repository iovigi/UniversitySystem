@model UniversitySystem.Web.Models.Course.CourseListsByStudentViewModel
@{
    ViewData["Title"] = "Courses";
}

<h1>Course list</h1>

<h2>Registered Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Course Score</th>
            <th>Unregister</th>
        </tr>
    </thead>
    <tbody id="registeredCourses">
        @foreach (var course in Model.RegisteredCourses)
        {
            <tr>
                <td>
                    @course.Name
                </td>
                <td>
                    @course.Score
                </td>
                <td><button class="btn btn-default un-register-btn" data-courseId="@course.Id">Unregister</button></td>
            </tr>
        }
    </tbody>
</table>

<h2>Non Registered Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Course Score</th>
            <th>Register</th>
        </tr>
    </thead>
    <tbody id="notRegisteredCourses">
        @foreach (var course in Model.NotRegisteredCourses)
        {
            <tr>
                <td>
                    @course.Name
                </td>
                <td>
                    @course.Score
                </td>
                <td>
                    @if (Model.CanRegisterMoreCourse)
                    {
                        <button class="btn btn-default register-btn" data-courseId="@course.Id">Register</button>
                    }
                    else
                    {
                        <button class="btn btn-default register-btn" style="display:none;" data-courseId="@course.Id">Register</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>